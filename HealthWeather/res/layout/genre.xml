<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
     <TextView
        android:id="@+id/info1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click on applicable button"
        android:textSize="10pt" />

    <Button
        android:id="@+id/ph_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/info1"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="92dp"
        android:text="Pharmacies" />

    <Button
        android:id="@+id/hspt_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ph_lay"
        android:layout_alignBottom="@+id/ph_lay"
        android:layout_alignRight="@+id/info1"
        android:text="Hospitals" />

</RelativeLayout>
